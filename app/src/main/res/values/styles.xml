<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WrapContentStyle" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="WrapContentStyle.SmallMarginTop">
        <item name="android:layout_marginTop">@dimen/small_space</item>
    </style>

    <style name="WrapContentStyle.NormalMarginTop">
        <item name="android:layout_marginTop">@dimen/normal_space</item>
    </style>

    <style name="WrapContentStyle.NormalMarginTop.Black">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="WrapContentStyle.SmallMarginTop.MediumSize_Black_Serif">
        <item name="android:textSize">@dimen/medium_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily" tools:ignore="NewApi">serif</item>
    </style>

    <style name="WrapContentProgressbarStyle" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
